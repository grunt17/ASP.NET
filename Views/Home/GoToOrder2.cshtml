@{
    ViewBag.Title = "Orders";
}
<h2>Корзина</h2>
<table class="table table-bordered table-primary">
    <tr>
        <th><p>№</p></th>
        <th><p>Товар</p></th>
        <th><p>Модель</p></th>
        <th><p>Марка</p></th>
        <th><p>Цена</p></th>
        <th><p>Кол-во</p></th>
    </tr>
    @{
       
    }

    @foreach (var p in ViewBag.Korzinas as IEnumerable<Korzina>)
    {
        <tr>
            <td><p>@p.Id</p></td>
            <td><p>@p.Name</p></td>
            <td><p>@p.modId</p></td>
            <td><p>@p.markId</p></td>
            <td><p>@p.Price</p></td>
            <td><p>@p.Kol</p></td>
            <td><a href="/Home/Order/@p.Id">Оформить заказ</a></td>
        </tr>
    }
    </table>
<h2>Оформление заказа</h2>
<table class="table table-bordered table-primary">
    <tr>
        <th><p>№</p></th>
        <th><p>Фамилия</p></th>
        <th><p>Товар</p></th>
        <th><p>Модель</p></th>
        <th><p>Марка</p></th>
        <th><p>Цена</p></th>
        <th><p>Кол-во</p></th>
    </tr>
    
    

    @foreach (var p in ViewBag.Orders as IEnumerable<Order>)
    {
        <tr>
            <td><p>@p.Id</p></td>
            <td><p>@p.CustomerName</p></td>
            <td><p>@p.Name</p></td>
            <td><p>@p.modId</p></td>
            <td><p>@p.markId</p></td>
            <td><p>@p.Price</p></td>
            <td><p>@p.Kol</p></td>
            <td><a href="/Home/Cancel1/@p.Id">Отменить заказ</a></td>
        </tr>
    }
</table>


